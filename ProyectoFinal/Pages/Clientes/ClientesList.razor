@page "/Clientes/cread"
@using ProyectoFinal.Models

<h1>Clientes</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Cedula</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Correo</th>
            <th>Licencia</th>
            <th>Nacionalidad</th>
            <th>Foto de la persona</th>
            <th>Foto de la licencia</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Clientes cl in GetClientes())
        {
            <tr>
                <td>@cl.Id</td>
                <td>@cl.Cedula</td>
                <td>@cl.Nombre</td>
                <td>@cl.Apellido</td>
                <td>@cl.Correo</td>
                <td>@cl.Licencia</td>
                <td>@cl.Nacionalidad</td>
                <td><img src=@cl.FotoCliente asp-append-version="true" width="100" heigth="100" /></td>
                <td><img src=@cl.FotoLicencia asp-append-version="true" width="100" heigth="100" /></td>
            </tr>
        }
    </tbody>
</table>

@code {
    List<Clientes> GetClientes() => new gestion_vehicularContext().Clientes.ToList();

}
